syntax = "v1"

info(
	title: "basic api"
	desc: "基础API"
	author: "panjiangming"
	email: "panjm2001@126.com"
	version: "v1"
)

type (
	LoginUserReq {
		Username string `json:"username"`
		Password string `json:"password"`
	}

	LoginResp {
		Username string `json:"username"`
		Token    string `json:"token"`
	}
)

@server(
	group: basic
)
service core-api {
	@doc "探活"
	@handler Ping
	get /api/v1/ping
	
	@doc "登录API"
	@handler LoginUser
	post /api/v1/login/user (LoginUserReq) returns (LoginResp)
}